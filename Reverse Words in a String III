class Solution {
public:
    string reverseWords(string s) 
    {
        string ans = "";
        stringstream ss(s);
        string word;
        while(ss >> word)
        {
            reverse(word.begin(), word.end());
            ans += word + " ";
        }
        ans.pop_back();
        return ans;
    }
};
// tc o(n)
// sc o(1)
