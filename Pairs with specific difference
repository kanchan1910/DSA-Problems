https://practice.geeksforgeeks.org/problems/pairs-with-specific-difference1533/1#

int maxSumPairWithDifferenceLessThanK(int arr[], int n, int k)
    {
        sort(arr, arr + n, greater<int>());
        int ans = 0;
        for(int i = 0; i < n - 1; i++)
        {
            if((arr[i] - arr[i + 1]) < k)
            {
                ans += (arr[i] + arr[i + 1]);
                i++;
            }
        }
        return ans;
    }
    tc o(nlogn)
    sc o(1)
    
